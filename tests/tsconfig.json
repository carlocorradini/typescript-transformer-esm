{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"rootDir": "source",
		"outDir": "output",
		"strict": true,
		"declaration": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [ "ES2021" ],
		"plugins": [
			{ "transform": "../source/index.ts", "after": true }
		]
	},
	"include": [
		"./source/**/*.ts",
		"./source/**/*.json"
	],
}
